{% extends 'template.html.twig' %}

{% block page %}
    <section class="head clearfix">
        <div class="BGcolor">
            <div class="text-content">
                <p>
                    Bienvenue sur le site de réservation de matériel audiovisuel du département MMI de Montbéliard.
                </p>
                <p>
                    Vous trouverez ici tout ce dont vous avez besoin pour réaliser vos vidéos !
                </p>
                <a href="index.php?page=about" class="btn CGU" data-content="Conditions d'utilisation">Conditions d'utilisation</a>
            </div>
        </div>
    </section>
    {% if admin == 1 %}
        <section class="main-content admin">
            <section class="new resa">
                <h2>Nouvelles réservations</h2>
                    {% for resa in listeResa %}
                        <div class="reservation">
                            <div class="content">
                                <h3>{{ resa.DATEDEBUT ~ ' - ' ~ resa.DATEFIN ~ ' | ' ~ resa.personne.NOM ~ ' ' ~ resa.personne.PRENOM }}</h3>
                                {% for materiel in resa.materiel %}
                                    <p>{{ materiel }}</p>
                                {% endfor %}
                            </div>
                            <form method="post">
                                <input type="text" class="form-control hidden" value="{{ resa.ID }}" name="idResa">
                                <button type="submit" name="validateResa"><i class="fa fa-check-square" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    {% endfor %}
            </section><!--
            --><section class="new inscription">
                <h2>Nouvelles inscriptions</h2>
                    {% for inscription in listeInscription %}
                        <div class="inscr">
                            <h3>
                                {{ inscription.NOM ~ ' ' ~ inscription.PRENOM ~ ' - ' ~ inscription.PROMO ~ ' ' ~ inscription.GROUPE }}
                            </h3>
                            <form method="post">
                                <input type="text" class="form-control hidden" value="{{ inscription.ID }}" name="idEtudiant">
                                <button type="submit" name="validateInscr"><i class="fa fa-check-square" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    {% endfor %}
            </section>
        </section>
    {% else %}
        <section class="main-content">
            <h2>Catégories</h2>
            <nav class="categories">
                <ul>
                    <li class="nav-Photo"><a href="index.php?page=photo" data-content="Photos">Photo</a></li>
                    <li class="nav-Video"><a href="index.php?page=video" data-content="Vidéos">Vidéo</a></li>
                    <li class="nav-Son"><a href="index.php?page=son" data-content="Son">Son</a></li>
                    <li class="nav-Light"><a href="index.php?page=eclairage" data-content="Éclairages">Éclairage</a></li>
                    <li class="nav-Acc"><a href="index.php?page=accessoires" data-content="Accessoires">Accessoires</a></li>
                    <li class="nav-Room"><a href="index.php?page=salles" data-content="Salles">Salles</a></li>
                </ul>
            </nav>
        </section>
    {% endif %}
{% endblock %}