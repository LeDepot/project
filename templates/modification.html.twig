{% extends 'template.html.twig' %}

{% block page %}

<div class="container-admin">
    <div class="page-header">
        <h1>Modifier</h1>
    </div>

    <form method="post" action="" enctype="multipart/form-data">
        <div>
            <div class="left">
                <div class="form-group">
                    <label for="nom">Nom :</label>
                    <input type="text" name="nom" class="form-control" id="nom"
                           value="{{ materiel.NOM }}" />
                </div>

                <div class="form-group">
                    <label for="description">Description :</label>
                    <textarea class="form-control" rows="5" id="description" name="description" cols="5" placeholder="Ex: Appareil photo ... ">{{ materiel.DESCRIPTION }}</textarea>
                </div>

                <div class="form-group">
                    <label for="nombre">Nombre :</label>
                    <input type="number" class="form-control" name="nombre" id="nombre"
                           value="{{ materiel.NOMBRE }}"/>
                </div>

                <div class="form-group">
                    <label for="qte">Quantité :</label>
                    <input type="number" class="form-control" name="qte" id="qte"
                           value="{{ materiel.QUANTITE }}"/>
                </div>

                <div class="form-group">
                    <label for="disponibilite">Dispnible :</label>
                    <input type="checkbox" name="disponibilite" id="disponibilite" {% if materiel.STATUT == 1 %}checked{% endif %} style="margin-left: 10px"/>
                </div>

                <div class="form-group">
                    <label for="caution">Caution:</label>
                    <input type="text" name="caution" id="caution" class="form-control"
                           value="{{ materiel.CAUTION }}"/>
                </div>
            </div>

            <div class="right">
                <div class="form-group">
                    <input type="hidden" name="MAX_FILE_SIZE" value="10000000">
                    <label for="image">Image :</label>
                    <input id="image" name="image" class="input-file" type="file"><br>
<!--                     <button type="submit" name="submitImage" class="addElm btn btn-primary btn-sm" data-content="Enregistrer la photo"></button>
                     -->                    <table class="table">
                    </table>
                </div>

                <div class="form-group">
                    <input type="hidden" name="MAX_FILE_SIZE" value="10000000">
                    <label for="pdf">PDF :</label>
                    <input id="pdf" name="pdf" class="input-file" type="file"><br>
<!--                     <button type="submit" name="submitPDF" class="addElm btn btn-primary btn-sm" data-content="Enregistrer le PDF"></button>
                     -->                    <table class="table">
                    </table>
                </div>

                <div class="form-group">
                    <label for="categorie">Catégorie : </label>
                    <select name="categorie" id="categorie" class="form-control">
                        {% for categorie in categories %}
                            <option value="{{ categorie.ID }}">{{ categorie.NOM }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="form-group center-block">
                <button type="submit" name="modif" class="btn btn-primary btn-lg" data-content="Ajouter le matériel"></button>
            </div>

        </div>
    </form>
</div>
{% endblock %}

